<!-- Code for Layouts -->
<link rel="stylesheet" href="./css/layout.css">
<h1>
   
</h1>

<section id="feed-post">
    <h4>Posts</h4>

    <% if(locals.user) {%>
    <form action="/posts/create" id="new-post-form" method="post">
        <textarea name="content" cols="30" rows="3" required></textarea>
        <input type="submit" value="Post">
    </form>
    <% } %>
    <div id="feed-post-container">
        <ul id="">
            
            <% for(post of posts) {%>

                <li> <span><%= post.content %></span>
                    
                    <% if(locals.user && post.user.id == locals.user._id) { %>
                    <span>
                        <a href="/posts/delete/<%= post.id %>">Delete</a>
                    </span>
                    <% } %>
                    <br>
                    <small>
                        
                        <!-- <span><%#= post._id %> with _id</span>
                        <span><%#= post.id %> without _id</span> -->
                
                    </small>

                    <% if(locals.user) {%>
                        <form action="/comments/create" method="post">
                            <!-- <textarea name="content" cols="30" rows="3"></textarea> -->
                            <input type="text" name="content" placeholder="Type Here...." required>
                            <input type="hidden" name="post" value="<%= post._id %>">
                            <input type="submit" name="Add comment" id="">
                        </form>
                    <% } %>

                    <div class="post-comment-list">
                        <ul id="post-comment-<%=post._id  %>">
                            <% for(let com of post.comments){ %>
                                <li>
                                    <%= com.content %>
                                    <br>
                                    <small>
                                        <%= com.user.name %>
                                    </small>
                                </li>
                            <% } %>
                        </ul>

                    </div>
                </li>
            <% } %>

        </ul>
    </div>
</section>